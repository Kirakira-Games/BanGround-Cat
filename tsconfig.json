{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "watch": false,
    "rootDir": "./src",
    "outDir": "./build",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ]
}
